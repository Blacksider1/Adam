        <Label Content="Пароль" HorizontalAlignment="Left" Margin="112,183,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="log" HorizontalAlignment="Left" Height="23" Margin="188,128,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <PasswordBox x:Name="pas" HorizontalAlignment="Left" Margin="188,183,0,0" VerticalAlignment="Top" Width="135" Height="23"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="144,225,0,0" VerticalAlignment="Top" Width="82" Height="30" BorderBrush="White" Background="{x:Null}" Foreground="White" Click="Vhod"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="253,225,0,0" VerticalAlignment="Top" Width="119" Height="30" Background="{x:Null}" Foreground="White" BorderBrush="White" Click="Reg"/>

    </Grid>
